{
    "title": "DatabaseConfig",
    "description": "A configuration file for databases used in projects",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "ProjectName": {
                "description": "The name of the project",
                "type": "string"
            },
            "ProjectRootPath": {
                "description": "The root path of the project's SQL files, following the required structure",
                "type": "string"
            },
            "ProceduresBeforeFunctions": {
                "description": "Whether to create procedures before functions. Used to swap the order if some functions use procedures",
                "type": "boolean"
            },
            "Environments": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "EnvironmentName": {
                            "description": "The name of this environment",
                            "type": "string"
                        },
                        "ServerName": {
                            "description": "The server name for this environment",
                            "type": "string"
                        },
                        "DatabaseName": {
                            "description": "The database name for this environment",
                            "type": "string"
                        },
                        "DatabaseLogin": {
                            "description": "The database login for this environment",
                            "type": "string"
                        },
                        "DatabaseUser": {
                            "description": "The database user for the login of this environment",
                            "type": "string"
                        },
                        "DatabasePassword": {
                            "description": "The database password for the user of this environment",
                            "type": "string"
                        }
                    },
                    "required": ["EnvironmentName", "ServerName", "DatabaseName"],
                    "dependentRequired": {
                        "DatabaseLogin": ["DatabaseUser", "DatabasePassword"],
                        "DatabaseUser": ["DatabaseLogin", "DatabasePassword"],
                        "DatabasePassword": ["DatabaseLogin", "DatabaseUser"]
                    }
                }
            }
        },
        "required": ["ProjectName", "ProjectRootPath", "Environments"]
    }
}